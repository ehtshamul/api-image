            "url": {
              "raw": "{{base_url}}/posts?page=1&limit=5",
              "host": ["{{base_url}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Get posts with pagination"
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/1",
              "host": ["{{base_url}}"],
              "path": ["posts", "1"]
            },
            "description": "Retrieve a specific post by ID"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"title\": \"New Post Title\",\n  \"body\": \"This is the content of the new post.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            },
            "description": "Create a new post (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Post Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/1/comments",
              "host": ["{{base_url}}"],
              "path": ["posts", "1", "comments"]
            },
            "description": "Retrieve all comments for a specific post"
          }
        },
        {
          "name": "Add Comment to Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Commenter Name\",\n  \"email\": \"commenter@example.com\",\n  \"body\": \"This is a great post!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/1/comments",
              "host": ["{{base_url}}"],
              "path": ["posts", "1", "comments"]
            },
            "description": "Add a comment to a post (no authentication required)"
